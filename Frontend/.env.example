# =============================================================================
# Noveris AI Platform - Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local and modify values as needed
# Note: All variables must be prefixed with VITE_ to be exposed to the client
# =============================================================================

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL (Required in production)
# In development, defaults to http://localhost:8000 if not set
VITE_API_BASE_URL=http://localhost:8000

# =============================================================================
# Authentication Configuration
# =============================================================================

# Authentication API mode (mock=simulated data for testing, real=actual backend API)
VITE_AUTH_API_MODE=real

# Path to redirect to after successful login
VITE_AUTH_REDIRECT_AFTER_LOGIN=/

# Enable SSO (Single Sign-On) authentication
VITE_SSO_ENABLED=false

# =============================================================================
# Application Information
# =============================================================================

# Application name (displayed in UI)
VITE_APP_NAME=Noveris AI Platform

# Application version
VITE_APP_VERSION=1.0.0

# =============================================================================
# Feature Flags
# =============================================================================
# Enable or disable specific features in the UI

# Cloud discovery feature (AWS, Azure, GCP node import)
VITE_FEATURE_CLOUD_DISCOVERY=true

# Bulk operations feature (batch import, export, delete)
VITE_FEATURE_BULK_OPERATIONS=true

# Credential rotation feature
VITE_FEATURE_CREDENTIAL_ROTATION=true

# Alerting system feature
VITE_FEATURE_ALERTING=true

# =============================================================================
# UI Configuration
# =============================================================================

# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Default language (en, zh-CN, etc.)
VITE_DEFAULT_LANGUAGE=en

# =============================================================================
# Polling Intervals (milliseconds)
# =============================================================================
# How often to refresh data from the backend

# Dashboard overview polling interval
VITE_POLLING_INTERVAL_DASHBOARD=30000

# Jobs list polling interval
VITE_POLLING_INTERVAL_JOBS=10000

# Alerts polling interval
VITE_POLLING_INTERVAL_ALERTS=15000

# Node status polling interval
VITE_POLLING_INTERVAL_NODES=30000

# =============================================================================
# WebSocket Configuration
# =============================================================================

# Enable WebSocket for real-time updates
VITE_WS_ENABLED=false

# WebSocket reconnection interval (milliseconds)
VITE_WS_RECONNECT_INTERVAL=5000
